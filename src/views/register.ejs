<!DOCTYPE html>
<html lang="en">
    <%- include ('partials/head') %> 
<body>
    <%- include('partials/header')  %> 

        <main>
            <% if (locals.errors) { %>
                <% for( let oneError in errors) { %>
                      <p><%= errors[oneError].msg %>   </p>
                      
              <% } %>
                 
                  <% } %>
        <div class="crea">CREA TU CUENTA</div>
        <p class="login">Ya tenes cuenta? ¡Ingresa <a class="register-here" href="/users/login">aquí</a>!</p>
            
            <form action="/users/register" method="POST"  id="registro" class="register" enctype="multipart/form-data">
                
                <div class="form-control position-1 " id="grupo_nombre">
                    <label for="nombre" class="formulario__label">Nombre</label>
                    <input type="text" name="name" id="nombre" class="formulario__input" value="<%= locals.oldData ? oldData.name : null %>">
                    <span class=" formulario_validacion  exclamation-circle fas fa-exclamation-circle"  ></span>
                    <samp  style="color:#b60b0b" id="name" ></samp>
                    <% if (locals.errors && errors.name ) { %>
                        <div class="text-danger">
                          <p> <%= errors.name.msg %> </p>
                        </div>
                    <% } %>
                </div>
                </div>
                <div class="form-control position-1 "  id="grupo_lastname">
                    <label for="lastname">Apellido</label>
                    <input type="text" name="lastname" id="apellido" class="formulario__input" value="<%= locals.oldData ? oldData.lastname : null %>">
                    <span class=" formulario__validacion  exclamation-circle fas fa-exclamation-circle"></span>
                    <samp  style="color:#b60b0b" id="lastname" ></samp>
                    
                    <% if (locals.errors && errors.lastname ) { %>
                        <div class="text-danger">
                          <p> <%= errors.lastname.msg %> </p>
                        </div>
                    <% } %>
                </div>

                <div class="form-control position-1"  id="grupo_email">
                    <label for="correo">Email</label>
                    <input type="email" name="email" id="correo" class="formulario__input" value="<%= locals.oldData ? oldData.email : null %>">
                    <span class=" formulario_validacion  exclamation-circle fas fa-exclamation-circle"></span>
                    <samp  style="color:#b60b0b" id="email" ></samp>
                    <% if (locals.errors && errors.email ) { %>
                        <div class="text-danger">
                          <p> <%= errors.email.msg %> </p>
                        </div>
                    <% } %>
                </div>

                <div class="form-control">
                    <label for="">Fecha de nacimiento</label>
                    <input type="date" name="dob">
                </div>
                
                <div class="form-control" id="avatar">
                    <label for="image">Imagen de perfil</label>
                    <input type="file" id="fotoperfil" name="avatar" accept=".png, .jpg, .jpeg" >
                    <samp  style="color:#b60b0b" id="avatar" ></samp>
                    <% if (locals.errors && errors.avatar ) { %>
                        <div class="text-danger">
                          <p> <%= errors.avatar.msg %> </p>
                        </div>
                    <% } %> 
                </div>
                
                <div class="form-control position-2">
                    <label for="">Contraseña</label>
                    <input type="password" name="password" id="password" class="formulario__input"  placeholder="Debe contener 8 caracteres y un numero">
                    <span class="fas fa-eye-slash"  id="ojito" ></span>
                    <samp  style="color:#b60b0b" id="repassword" ></samp>
                    <% if (locals.errors && errors.password ) { %>
                        <div class="text-danger">
                          <p> <%= errors.password.msg %> </p>
                        </div>
                    <% } %>
                </div>

                <div class="form-control">
                    <label for="">Repetir Contraseña</label>
                    <input type="password" name="repassword">
                </div>

                <div class="buttons">
                <a href="#"><button type="submit" class="enviar">Registrate</button></a>
                <button type="reset" class="borrar">Borrar</button></div>
            </form>
        </main>


        <%- include('partials/footer')  %> 
       
        <script src="/js/registerValidations.js" ></script>
    </body>
    </html>